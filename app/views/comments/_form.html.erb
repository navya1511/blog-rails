<%= form_with model: [ @article , @article.comments.build] do 
 |f| %>
 <p class="field">
 <%= f.label :commenter %><br>
 <%= f.text_field :commenter%>
 </p>
 <br>
 <p class="field">
 <%= f.label :body %><br>
 <%= f.text_area :body %>
 </p>
 <br>
 <p class="field">
  <%= f.label :status %><br>
  <%= f.select :status, ['public', 'private', 'archived'], selected: 'public'  %>
</p>
<br>

 <p>
 <%= f.submit  :class => "btn"  %>

 </p>
 <% end %>